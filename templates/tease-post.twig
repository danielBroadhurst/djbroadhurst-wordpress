{% extends "tease.twig" %}

{% block content %}
<h2 class="h2"><a href="{{post.link}}">{{post.title}}</a></h2>
<div class="blog-flex">
    {% if post.thumbnail.src %}
    <a href="{{post.link}}"><img src="{{post.thumbnail.src}}"></a>
    <div>
        <p>{{post.excerpt}}</p>
        <ul class="tags-list">
            <li>Tags:</li>
            {% for term in post.terms('tags') %}
            <li><a href="{{term.link}}">{{term.name}}</a></li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endif %}
{% endblock %}
